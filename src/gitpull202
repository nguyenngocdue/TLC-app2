git pull && sudo chown 82:82 * -R && sudo chmod 777 storage/framework/* -R
docker exec -it laravel202_php php artisan cache:clear
docker exec -it laravel202_php php artisan view:clear
docker exec -it laravel202_php php artisan config:clear
docker exec -it laravel202_php php artisan event:clear

docker exec -it laravel202_php php artisan route:clear
docker exec -it laravel202_php php artisan route:cache

# This it for the workers to load the latest code in Listerner.php files
docker exec -it laravel202_php php artisan horizon:terminate --force
docker exec -it laravel202_php php artisan horizon

echo "Don't forget to run php artisan migrate to have the latest version of DB"
